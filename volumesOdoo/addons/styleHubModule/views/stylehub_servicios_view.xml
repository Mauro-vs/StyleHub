<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para servicios -->
    <record id="view_stylehub_servicio_list" model="ir.ui.view">
        <field name="name">stylehub.servicio.list</field>
        <field name="model">stylehub.servicio</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price"/>
                <field name="duration" widget="float_time"/> 
            </list>
        </field>
    </record>

    <!-- Vista de formulario para servicios -->
    <record id="view_stylehub_servicio_form" model="ir.ui.view">
        <field name="name">stylehub.servicio.form</field>
        <field name="model">stylehub.servicio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre del Servicio"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="price"/>
                        <field name="duration" widget="float_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para servicios -->
    <record id="action_stylehub_servicios" model="ir.actions.act_window">
        <field name="name">Servicios</field>
        <field name="res_model">stylehub.servicio</field> 
        <field name="view_mode">list,form</field>
    </record>
</odoo>