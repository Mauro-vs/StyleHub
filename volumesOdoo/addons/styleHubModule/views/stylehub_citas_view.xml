<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stylehub_cita_tree" model="ir.ui.view">
        <field name="name">stylehub.cita.list</field>
        <field name="model">stylehub.cita</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'borrador'" 
                  decoration-muted="state == 'cancelada'"
                  decoration-success="state == 'realizada'">
                <field name="name"/>
                <field name="fecha_inicio"/>
                <field name="fecha_fin"/>
                <field name="cliente_id"/>
                <field name="estilista_id"/>
                <field name="amount_total" widget="monetary"/>
                <field name="state" widget="badge" decoration-success="state == 'confirmada'"/>
            </list>
        </field>
    </record>

    <record id="view_stylehub_cita_form" model="ir.ui.view">
        <field name="name">stylehub.cita.form</field>
        <field name="model">stylehub.cita</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirmar" string="Confirmar Cita" type="object" class="oe_highlight" invisible="state != 'borrador'"/>
                    <button name="action_realizada" string="Finalizar Trabajo" type="object" class="oe_highlight" invisible="state != 'confirmada'"/>
                    <button name="action_cancelar" string="Cancelar" type="object" invisible="state in ('cancelada', 'realizada')"/>
                    <button name="action_borrador" string="Volver a Borrador" type="object" invisible="state != 'cancelada'"/>
                    <field name="state" widget="statusbar" statusbar_visible="borrador,confirmada,realizada"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="cliente_id" readonly="state != 'borrador'"/>
                            <field name="estilista_id" readonly="state != 'borrador'"/>
                        </group>
                        <group>
                            <field name="fecha_inicio" readonly="state != 'borrador'"/>
                            <field name="fecha_fin" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Servicios">
                            <field name="lineas_ids" readonly="state != 'borrador'">
                                <list editable="bottom">
                                    <field name="servicio_id"/>
                                    <field name="precio"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_total" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stylehub_cita_calendar" model="ir.ui.view">
        <field name="name">stylehub.cita.calendar</field>
        <field name="model">stylehub.cita</field>
        <field name="arch" type="xml">
            <calendar string="Agenda de Citas" 
                      date_start="fecha_inicio" 
                      date_stop="fecha_fin"
                      color="estilista_id" 
                      event_open_popup="true"
                      quick_create="0" 
                      mode="week">
                <field name="cliente_id"/>
                <field name="amount_total" widget="monetary"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="view_stylehub_cita_kanban" model="ir.ui.view">
        <field name="name">stylehub.cita.kanban</field>
        <field name="model">stylehub.cita</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="false">
                <field name="state"/>
                <field name="name"/>
                <field name="cliente_id"/>
                <field name="amount_total"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="cliente_id"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <span class="text-muted"><field name="name"/></span>
                                <br/>
                                <span class="text-muted"><field name="fecha_inicio"/></span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="estilista_id"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="amount_total" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_stylehub_citas" model="ir.actions.act_window">
        <field name="name">Citas</field>
        <field name="res_model">stylehub.cita</field>
        <field name="view_mode">calendar,kanban,list,form</field>
    </record>

</odoo>